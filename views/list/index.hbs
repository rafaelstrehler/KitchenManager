          <tr>
            <td>{{name}}</td>
            <td>{{quantity}}</td>
            <td>{{currency}}</td>
            <td>
                <form method="get" action="/list/removeitem">
                  <input type="text" name="id" style="display: none" value="{{id}}" />
                  <input type="text" name="listid" style="display: none" value="{{../_id}}" />
                  <input type="submit" value="Löschen">
